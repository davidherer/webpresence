generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model - End users of the application
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  sessions      UserSession[]
  authCodes     UserAuthCode[]
  organizations OrganizationMember[]
}

model UserSession {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
}

model UserAuthCode {
  id        String   @id @default(cuid())
  userId    String
  code      String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([code])
}

// Admin model - Completely separate from User
model Admin {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  sessions   AdminSession[]
  authCodes  AdminAuthCode[]
  auditLogs  AdminAuditLog[]
}

model AdminSession {
  id        String   @id @default(cuid())
  adminId   String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  userAgent String?
  ipAddress String?

  admin Admin @relation(fields: [adminId], references: [id], onDelete: Cascade)

  @@index([adminId])
  @@index([token])
}

model AdminAuthCode {
  id        String   @id @default(cuid())
  adminId   String
  code      String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  admin Admin @relation(fields: [adminId], references: [id], onDelete: Cascade)

  @@index([adminId])
  @@index([code])
}

model AdminAuditLog {
  id        String   @id @default(cuid())
  adminId   String
  action    String
  details   Json?
  ipAddress String?
  createdAt DateTime @default(now())

  admin Admin @relation(fields: [adminId], references: [id], onDelete: Cascade)

  @@index([adminId])
  @@index([createdAt])
}

// ==========================================
// ORGANIZATION & MULTI-USER MANAGEMENT
// ==========================================

model Organization {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Analysis frequency settings (in hours)
  serpFrequencyHours       Int @default(24)   // Daily by default
  competitorFrequencyHours Int @default(168)  // Weekly by default (7*24)
  aiReportFrequencyHours   Int @default(720)  // Monthly by default (30*24)

  members  OrganizationMember[]
  websites Website[]
}

model OrganizationMember {
  id             String   @id @default(cuid())
  organizationId String
  userId         String
  role           String   @default("member") // owner, admin, member
  createdAt      DateTime @default(now())

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([organizationId, userId])
  @@index([organizationId])
  @@index([userId])
}

// ==========================================
// WEBSITE MANAGEMENT
// ==========================================

model Website {
  id             String   @id @default(cuid())
  organizationId String
  url            String
  name           String
  status         String   @default("pending") // pending, analyzing, active, error
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Cached sitemap data
  sitemapUrl       String?
  lastSitemapFetch DateTime?

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  searchQueries    SearchQuery[]
  competitors      Competitor[]
  pageAnalyses     PageAnalysis[]
  pageExtractions  PageExtraction[]
  aiReports        AIReport[]
  analysisJobs     AnalysisJob[]
  sitemapSnapshots SitemapSnapshot[]

  @@unique([organizationId, url])
  @@index([organizationId])
  @@index([status])
}

// ==========================================
// SITEMAP MANAGEMENT
// ==========================================

model SitemapSnapshot {
  id          String   @id @default(cuid())
  websiteId   String
  sitemapUrl  String // The sitemap URL that was fetched
  blobUrl     String // Vercel Blob storage URL for the full sitemap data
  urlCount    Int      @default(0) // Number of URLs in this snapshot
  fetchedAt   DateTime @default(now())
  sitemapType String   @default("single") // single, index, subset
  parentId    String? // For sitemap index, reference to parent snapshot
  metadata    Json? // Additional metadata (changefreq distribution, etc.)

  website Website          @relation(fields: [websiteId], references: [id], onDelete: Cascade)
  parent  SitemapSnapshot? @relation("SitemapHierarchy", fields: [parentId], references: [id])
  children SitemapSnapshot[] @relation("SitemapHierarchy")
  urls     SitemapUrl[]

  @@index([websiteId, fetchedAt(sort: Desc)])
  @@index([websiteId])
  @@index([fetchedAt])
}

// Individual URLs from sitemap snapshots
model SitemapUrl {
  id         String   @id @default(cuid())
  snapshotId String
  url        String
  lastmod    String?
  changefreq String?
  priority   Float?
  createdAt  DateTime @default(now())

  snapshot SitemapSnapshot @relation(fields: [snapshotId], references: [id], onDelete: Cascade)

  @@index([snapshotId])
  @@index([url])
}

// ==========================================
// SEARCH QUERIES (Identified by AI)
// ==========================================

enum CompetitionLevel {
  HIGH
  LOW
}

model SearchQuery {
  id               String           @id @default(cuid())
  websiteId        String
  description      String?          // Search intent description, target audience
  query            String           // The actual search query (keywords for SERP)
  tags             String[]         @default([]) // Tags to group queries (product type, service, location, etc.)
  competitionLevel CompetitionLevel @default(HIGH) // HIGH = competitive, LOW = long-tail
  confidence       Float            @default(0) // AI confidence score 0-1
  isActive         Boolean          @default(true)
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt

  website Website @relation(fields: [websiteId], references: [id], onDelete: Cascade)

  serpResults   SerpResult[]
  aiSuggestions AISuggestion[]

  @@index([websiteId])
  @@index([isActive])
  @@index([query])
}

// ==========================================
// COMPETITOR TRACKING
// ==========================================

model Competitor {
  id          String   @id @default(cuid())
  websiteId   String
  url         String
  name        String
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Cached sitemap data
  sitemapUrl       String?
  lastSitemapFetch DateTime?

  website Website @relation(fields: [websiteId], references: [id], onDelete: Cascade)

  serpResults         SerpResult[]
  pageAnalyses        CompetitorPageAnalysis[]
  sitemapSnapshots    CompetitorSitemapSnapshot[]

  @@unique([websiteId, url])
  @@index([websiteId])
  @@index([isActive])
}

// ==========================================
// COMPETITOR SITEMAP MANAGEMENT
// ==========================================

model CompetitorSitemapSnapshot {
  id          String   @id @default(cuid())
  competitorId String
  sitemapUrl  String // The sitemap URL that was fetched
  blobUrl     String // Vercel Blob storage URL for the full sitemap data
  urlCount    Int      @default(0) // Number of URLs in this snapshot
  fetchedAt   DateTime @default(now())
  sitemapType String   @default("single") // single, index, subset
  parentId    String? // For sitemap index, reference to parent snapshot
  metadata    Json? // Additional metadata (changefreq distribution, etc.)

  competitor Competitor @relation(fields: [competitorId], references: [id], onDelete: Cascade)
  parent     CompetitorSitemapSnapshot? @relation("CompetitorSitemapHierarchy", fields: [parentId], references: [id])
  children   CompetitorSitemapSnapshot[] @relation("CompetitorSitemapHierarchy")
  urls       CompetitorSitemapUrl[]

  @@index([competitorId, fetchedAt(sort: Desc)])
  @@index([competitorId])
  @@index([fetchedAt])
}

// Individual URLs from competitor sitemap snapshots
model CompetitorSitemapUrl {
  id         String   @id @default(cuid())
  snapshotId String
  url        String
  lastmod    String?
  changefreq String?
  priority   Float?
  createdAt  DateTime @default(now())

  snapshot CompetitorSitemapSnapshot @relation(fields: [snapshotId], references: [id], onDelete: Cascade)

  @@index([snapshotId])
  @@index([url])
}

// ==========================================
// SERP ANALYSIS & TRACKING
// ==========================================

model SerpResult {
  id            String   @id @default(cuid())
  searchQueryId String?
  competitorId  String?
  query         String   // Search query used
  position      Int?     // Position in SERP (null if not found)
  url           String?  // URL that appeared in SERP
  title         String?
  snippet       String?
  searchEngine  String   @default("google")
  country       String   @default("FR")
  device        String   @default("desktop") // desktop, mobile
  createdAt     DateTime @default(now())

  // Raw SERP data stored in Vercel Blob
  rawDataBlobUrl String?

  searchQuery SearchQuery? @relation(fields: [searchQueryId], references: [id], onDelete: Cascade)
  competitor  Competitor?  @relation(fields: [competitorId], references: [id], onDelete: Cascade)

  @@index([searchQueryId])
  @@index([competitorId])
  @@index([query])
  @@index([createdAt])
}

// ==========================================
// PAGE ANALYSIS (Scraped Content)
// ==========================================

model PageAnalysis {
  id        String   @id @default(cuid())
  websiteId String
  url       String
  title     String?
  metaDescription String?
  headings  Json?    // { h1: [], h2: [], h3: [] }
  keywords  Json?    // Extracted keywords with frequency
  wordCount Int?
  createdAt DateTime @default(now())

  // Full HTML content stored in Vercel Blob
  htmlBlobUrl String?

  website Website @relation(fields: [websiteId], references: [id], onDelete: Cascade)

  @@index([websiteId])
  @@index([url])
  @@index([createdAt])
}

// ==========================================
// PAGE EXTRACTION (User-triggered structured extraction)
// ==========================================

model PageExtraction {
  id        String   @id @default(cuid())
  websiteId String
  url       String
  source    String   @default("manual") // manual, sitemap, gsc
  type      String?  // quick, full, null if not yet extracted
  status    String   @default("pending") // pending, extracting, completed, failed
  
  // Quick extraction fields
  title           String?
  metaDescription String?
  h1              String[]         @default([])
  
  // Full extraction fields (JSON for complex data)
  headings Json? // { h2: [], h3: [], h4: [], h5: [], h6: [] }
  keywords Json? // [{ keyword: string, frequency: number, density: number }]
  
  // HTML storage
  htmlBlobUrl String?
  
  // Timestamps
  createdAt   DateTime  @default(now())
  extractedAt DateTime? // When extraction was completed
  error       String?
  
  website Website @relation(fields: [websiteId], references: [id], onDelete: Cascade)

  @@index([websiteId])
  @@index([url])
  @@index([status])
  @@index([type])
  @@index([extractedAt])
}

model CompetitorPageAnalysis {
  id           String   @id @default(cuid())
  competitorId String
  url          String
  title        String?
  metaDescription String?
  headings     Json?
  keywords     Json?
  wordCount    Int?
  createdAt    DateTime @default(now())

  htmlBlobUrl String?

  competitor Competitor @relation(fields: [competitorId], references: [id], onDelete: Cascade)

  @@index([competitorId])
  @@index([url])
  @@index([createdAt])
}

// ==========================================
// AI REPORTS & SUGGESTIONS
// ==========================================

model AIReport {
  id        String   @id @default(cuid())
  websiteId String
  type      String   // periodic_recap, competitor_analysis, initial_analysis
  title     String
  content   String   @db.Text
  metadata  Json?    // Additional structured data
  createdAt DateTime @default(now())

  website Website @relation(fields: [websiteId], references: [id], onDelete: Cascade)

  @@index([websiteId])
  @@index([type])
  @@index([createdAt])
}

model AISuggestion {
  id            String   @id @default(cuid())
  searchQueryId String
  type          String   // content, keyword, technical, backlink
  title         String
  content       String   @db.Text
  priority      Int      @default(0) // Higher = more important
  status        String   @default("pending") // pending, accepted, dismissed
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  searchQuery SearchQuery @relation(fields: [searchQueryId], references: [id], onDelete: Cascade)

  @@index([searchQueryId])
  @@index([type])
  @@index([status])
  @@index([priority])
}

// ==========================================
// BACKGROUND JOBS & SCHEDULING
// ==========================================

model AnalysisJob {
  id         String    @id @default(cuid())
  websiteId  String
  type       String    // sitemap_fetch, page_scrape, serp_analysis, ai_report
  status     String    @default("pending") // pending, running, completed, failed
  priority   Int       @default(0)
  payload    Json?     // Job-specific data
  result     Json?     // Job result data
  error      String?
  attempts   Int       @default(0)
  maxAttempts Int      @default(3)
  scheduledAt DateTime @default(now())
  startedAt   DateTime?
  completedAt DateTime?
  createdAt   DateTime @default(now())

  website Website @relation(fields: [websiteId], references: [id], onDelete: Cascade)

  @@index([websiteId])
  @@index([status])
  @@index([type])
  @@index([scheduledAt])
  @@index([priority])
}
